@model IEnumerable<MissionSite.Models.Missions>
@{
    ViewBag.Title = "Home Page";
}

<nav class="breadcrumb" style="position: fixed; z-index: 10000;">
    <span class="breadcrumb-item active">Home</span>
</nav>

<div class="jumbotron my-jumbotron">
    <h1>Welcome to MissionPedia!</h1>
    <p>The biggest collection of mission stats, facts, and information.</p>
    <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
            Search Missions
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            @foreach (var item in Model)
            {
                <li><a href="@Url.Action("MissionDetails", "Mission", new { missionID = @item.MissionID })">@Html.DisplayFor(modelItem => item.MissionName)</a></li>
            }
        </ul>
    </div>
</div>

<div class="row" style="text-align: center;">
    <div class="col-md-4">
        <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/uzjFEMmM0Xs"></iframe>
        </div>
        <br />
    </div>
    <div class="col-md-4">
        <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/oXio1W_oj0w"></iframe>
        </div>
        <br />
